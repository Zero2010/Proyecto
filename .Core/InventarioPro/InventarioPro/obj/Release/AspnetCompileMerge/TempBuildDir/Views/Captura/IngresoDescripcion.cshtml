
@{
    ViewBag.Title = "IngresoDescripcion";
    Layout = "~/Views/Shared/_CargaMasiva.cshtml";
}


<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">

            @if (TempData["LimiteCaptura"] != null)
            {
                <div class="alert alert-danger alert-dismissible " role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <strong>@TempData["LimiteCaptura"] </strong> 
                </div>
            }



                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Settings 1</a>
                            <a class="dropdown-item" href="#">Settings 2</a>
                        </div>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-box table-responsive">

                        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Descripción</th>
                                    <th>Cantidad</th>
                                    <th>Fecha</th>
                                    <th>lote</th>
                                    <th>Captura</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag._ListaProductos)
                                {
                                    <tr>
                                        @using (Html.BeginForm("CapturaInventario", "Captura"))
                                        {
                                            <td>@item.Sku</td>
                                            <td><input id="descripcion" name="descripcion" value="@item.Descripcion" readonly="readonly" style="width: 180px; heigth: 200px"></input></td>
                                            <th><input type="number" id="cantidad" name="cantidad" style="width : 60px; heigth : 60px"></th>
                                            <th><input id="fecha" name="fecha" class="date-picker form-control" placeholder="dd-mm-yyyy" type="date" required="required" onfocus="this.type='date'" onmouseover="this.type='date'" onclick="this.type='date'" onblur="this.type='text'" onmouseout="timeFunctionLong(this)" style="width: 130px; heigth: 130px"></th>
                                            <th><input type="text" id="lote" name="lote" style="width : 70px; heigth : 70px"></th>
                                            <td><input type="submit" value="Guardar" /></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>
                </div>
            </div>
        </div>
    </div>




    <script type="text/javascript">

     $('#Submit').click(function() {
         var path = '@Url.Content("~/Captura/IngresoCaptura")' + "?descripcion=" + $('#descripcion').val() + "+&fecha=" + $('#fecha').val() + "+&cantidad=" + $('#cantidad').val() + "+&lote=" = $('#lote').val()
     $(this).attr("href", path);
    });
    </script>


</div>


