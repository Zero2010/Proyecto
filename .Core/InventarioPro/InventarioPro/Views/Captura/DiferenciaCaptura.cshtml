
@{
    ViewBag.Title = "DiferenciaCaptura";
    Layout = "~/Views/Shared/_CargaMasiva.cshtml";

}

<div class="x_panel">
    <div class="x_title">
        <h2><small>Estado Proceso Captura</small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Settings 1</a>
                    <a class="dropdown-item" href="#">Settings 2</a>
                </div>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sku</th>
                    <th>Descripción</th>
                    <th>Cant Kardex </th>
                    <th>Cant Captura </th>
                    <th>Diferencia </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in ViewBag._DiferenciaCaptura)
                {
                <tr>
                    <td scope="row">@item.Sku</td>
                    <td>@item.Descripcion</td>
                    <td>@item.CantidadKardex</td>
                    <td>@item.CantidadCaptura</td>

                    @if (item.Diferencia < 0)
                    {
                        <td class="count red">@item.Diferencia</td>
                    }
                    else 
                    { 
                        <td class="count">@item.Diferencia</td>
                    }
                    
                </tr>
                }


            </tbody>
        </table>

    </div>
</div>

