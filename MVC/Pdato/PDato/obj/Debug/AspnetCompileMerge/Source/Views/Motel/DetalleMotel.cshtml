        <div class="col-md-3">

            <ul class="list-group list-group-flush listgroup">
                @foreach (var item in ViewBag.menu)
                {
                    <li class="list-group-item listgroup"><a href="@item.LinkH">@item.DescripcionTHabitacion<span class="float-right badge badge-danger round">@item.id</span></a></li>
                }
            </ul>
        </div>

        <br />
        <div class="col-lg-9">
            @foreach (var item in ViewBag.portada)
            {
                <div class="col-md-3">
                    <img class="portada redondearimagen" p src="/@item.PortadaPath" alt="Generic placeholder image">
                </div>
            }
        </div>
    </div>
</div>

<br /><br />

<div class="container-fluid">
    <hr class="col-md-12">
