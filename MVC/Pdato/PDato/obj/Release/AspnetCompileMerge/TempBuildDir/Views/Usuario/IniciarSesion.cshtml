@{
    ViewBag.Title = "IniciarSesion";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-sm-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body sombra">
                    <h5 class="card-title text-center">Ingresar</h5>
                    <form class="form-signin" action="/Usuario/IniciarSesion" method="post">
                        <div class="form-label-group">
                            <input type="text" id="user" name="user" form-control" placeholder="Ingrese usuario" required autofocus maxlength="12">
                            <label for="inputEmail">Ingrese usuario</label>
                        </div>

                        <div class="form-label-group">
                            <input type="password" id="pasw" name="pasw" class="form-control" placeholder="Ingrese password" required maxlength="15">
                            <label for="inputPassword">Password</label>
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Recordar password</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Ingresar</button>
                        <hr class="my-4">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


