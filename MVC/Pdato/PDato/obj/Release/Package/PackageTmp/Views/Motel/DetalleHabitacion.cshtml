@{
    ViewBag.Title = "DetalleHabitacion";
}

<div class="container">

    <br /> <br />
    <div class="row">


        <div class="col-sm-8 col-ml-8 col-lg-8">
            @foreach (var item in ViewBag.ImagenHabitacion)
            {
                <img class="imagenhabitacion redondearimagen" src="/@item.HabitacionPath" alt="Card image cap">
                <div class="card-body">
                    <br />
                    <h3 class="text-center text-uppercase encabezado">
                        <span class="text-lowercase d-block" align="left"><p class="Letras">@item.DescripcionProducto</p></span>
                    </h3>

                    <h1 class="one centraricono"><span><img src="~/Imagenes/Logo/colgador.png" /></span></h1>

                    <h2 class="text-center text-uppercase encabezado">
                        <span class="text-lowercase d-block" align="center"><p class="Letras">Nuestra Habitación:</p></span>
                    </h2>

                    <h3 class="text-center text-uppercase encabezado">
                        <span class="text-lowercase d-block" align="left"><p class="Letras">@item.DetalleProducto</p></span>
                    </h3>

                </div>
            }

        </div>

        <div class="col-sm-4 col-ml-4 col-lg-4">
            <br>
            <h3 class="text-center text-uppercase encabezado">
                <span class="text-lowercase d-block" align="left"><p class="Letras">Precios - Condiciones</p></span>
            </h3>
            <ul class="list-group list-group-flush listgroup">
                @foreach (var item in ViewBag.PrecioHabitacion)
                {
                    <li class="list-group-item ListadoLetrasPromo"><strong>@item.DetalleRestriccion</strong></li>
                    <li class="list-group-item ListadoLetrasPromo"><strong>Precio :</strong>@item.Precio</li>
                    <li class="list-group-item ListadoLetrasPromo"><strong>Tiempo :</strong>@item.hrs</li>
                }
            </ul>
        </div>

    </div>
  
</div>

<div class="container-fluid">

    <hr class="col-sm-12 col-ml-12 col-lg-12">
    <div class="col-sm-12 col-ml-12 col-lg-12 pt-4">
        <h1 class="text-center text-uppercase encabezado">
            <span class="text-lowercase"><p class="Letras TituloLetra">Servicios de Nuestra Habitación</p></span>
        </h1>
    </div>
    <hr class="col-sm-12 col-ml-12 col-lg-12">

    <div class="container-fluid">
        <div class="row">

            @foreach (var item in ViewBag.ServicioHabitacion)
            {
                <div class="col-sm-3 col-ml-3 col-lg-3">
                    <div class="mg-feature">
                        <div class="mg-feature-icon-title">
                            <img align="center" class="imagencard redondearimagen" src="/@item.IhabitacionMediano" alt="Card image cap">
                        </div>
                        <br />
                        @*<p align="left">@item.DescripcionSHabitacion</p>*@
                        <h3 class="text-center text-uppercase encabezado">
                            <span class="text-lowercase d-block" align="left"><p class="Letras">@item.DescripcionSHabitacion</p></span>
                        </h3>
                        <p>@item.DetalleServicio</p>
                    </div>
                </div>
            }
        </div>

    </div>


</div>



