@{
    ViewBag.Title = "Principal";
}

<br><br>
<div id="demo" class="carousel slide" data-ride="carousel">

    <ul class="carousel-indicators">
        @foreach (var item in ViewBag.portada)
        {
            if (item.IdSucursal == 1)
            {
                <li data-target="#demo" data-slide-to="0" class="active"></li>
            }
            else
            {
                <li data-target="#demo" data-slide-to="@item.IdSucursal"></li>
            }
        }
    </ul>

    <div class="carousel-inner">
        @foreach (var item in ViewBag.Iportada)
        {
            if (item.IdSucursal == 1)
            {
            <div class="carousel-item active">
                <img  async src="@item.ImagenBase64" class="portada" alt="Generic placeholder image">
                <div class="container-fluid">
                    <div class="carousel-caption text-left">
                        <h1>Example headline.</h1>
                        <p>@item.Nosotros</p>
                        <p><a class="btn btn-warning" href="/Motel/DetalleMotel/@item.IdSucursal" role="button">@item.NombreSucursal</a></p>
                    </div>
                </div>
            </div>
            }
            else
            {
            <div class="carousel-item">
                <img async src="@item.ImagenBase64" class="portada" alt="Generic placeholder image">
                <div class="container-fluids">
                    <div class="carousel-caption text-left">
                        <h1>Example headline.</h1>
                        <p>@item.Nosotros</p>
                        <p><a class="btn btn-warning" href="/Motel/DetalleMotel/@item.IdSucursal" role="button">@item.NombreSucursal</a></p>
                    </div>
                </div>
            </div>
            }
        }
    </div>


    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#demo" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#demo" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>

</div>
